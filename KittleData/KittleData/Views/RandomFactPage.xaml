<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KittleData.Views.RandomFactPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             Visual="Material"
              Title="Facts">
    <ContentPage.Content>
        <StackLayout Margin="15">
            <StackLayout IsVisible="{Binding IsBusy}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <ActivityIndicator IsEnabled="{Binding IsBusy}" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
            </StackLayout>

            <StackLayout IsVisible="{Binding IsBusy, Converter={StaticResource NotConverter}}">
                <Label Text="Fact:" TextColor="{StaticResource Primary}"/>
                <Label Text="{Binding CatFact.Fact}"/>

                <Button Text="Get Another!" Command="{Binding RefreshFact}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>